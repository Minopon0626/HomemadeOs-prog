     1                                          BOOT_LOAD equ 0x7c00        ;ブートプログラムのロード位置
     2                                  
     3                                          ORG     BOOT_LOAD           ;ロードアドレスをアセンブラに指示
     4                                  entry:
     5 00000000 EB58                        jmp ipl                         ;IPLへジャンプ
     6                                  
     7                                      ;-------------------------------
     8                                      ;【BPB(BIOS Parameter Block)】
     9                                      ;-------------------------------
    10 00000002 90<rept>                    times   90 - ($ - $$) db 0x90   ;
    11                                  
    12                                      ;-------------------------------
    13                                      ;【IPL(Initial Program Loader)】
    14                                      ;-------------------------------
    15                                  ipl:
    16 0000005A FA                          cli                             ; // 割込み禁止
    17                                  
    18 0000005B B80000                      mov ax, 0x0000                  ; AX = 0x0000
    19 0000005E 8ED8                        mov ds, ax                      ; DS = 0x0000
    20 00000060 8EC0                        mov es, ax                      ; ES = 0x0000
    21 00000062 8ED0                        mov ss, ax                      ; SS = 0x0000
    22 00000064 BC007C                      mov sp, BOOT_LOAD               ; SP = 0x7C00
    23                                  
    24 00000067 FB                          sti                             ; // 割込み許可
    25 00000068 8816[6E00]                  mov [BOOT.DRIVE], dl
    26                                  
    27                                      ;-------------------------------
    28                                      ; 処理の終了
    29                                      ;-------------------------------
    30 0000006C EBFE                        jmp $                           ;while(1); //(無限ループ)
    31                                  ALIGN 2, db 0
    32                                  BOOT:                               ;ブートドライブに関する情報
    33 0000006E 0000                    .DRIVE: dw 0                        ;ドライブ番号
    34                                  ;***********************************
    35                                  ;   ブートプログラム(先頭512バイトの終了)
    36                                  ;***********************************
    37 00000070 00<rept>                    times 510 - ($ - $$) db 0x00
    38 000001FE 55AA                        db 0x55, 0xAA
